# .env.example - Example configuration file for Weather Bot

# Telegram Credentials
API_ID=1234567
API_HASH=your_api_hash_here
BOT_TOKEN=your_bot_token_here

# Weather API
OPENWEATHER_API_KEY=your_weather_api_key_here

# Route API (for Route Weather feature)
OPENROUTE_API_KEY=your_openroute_key_here

# Admin (Your Telegram User ID)
# OpenRouteService API Key (For Route Finder)
# Get this from https://openrouteservice.org/dev
OPENROUTE_API_KEY=your_openroute_key_here

# Admin Configuration
# REQUIRED: Your numeric User ID (Get it from @userinfobot)
# The bot sends "System Online" alerts to this ID.
ADMIN_ID=123456789

# Premium Users (comma-separated IDs)
PREMIUM_USER_IDS=111111111,222222222

# Proxy (Optional)
PROXY_URL=socks5://127.0.0.1:10808

# PostgreSQL Configuration (for Graph Routing System)
POSTGRES_HOST=localhost
POSTGRES_PORT=5433
POSTGRES_DB=weather_bot_routing
POSTGRES_USER=postgres
POSTGRES_PASSWORD=12345

# Redis Configuration (for High-Performance Caching)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
REDIS_MAX_CONNECTIONS=50

# OSRM Configuration (Self-Hosted Routing Engine)
OSRM_URL=http://localhost:5000
OSRM_FALLBACK_PUBLIC=true

# H3 Geospatial Configuration (Segment-Based Caching)
# Resolution 7 = ~5km hexagons (optimal for weather routing)
H3_RESOLUTION=7
H3_WEATHER_CACHE_TTL=3600
PARALLEL_WEATHER_REQUESTS=10

# ===== GPT Custom Action Configuration =====
# Get Mapbox API key from: https://account.mapbox.com/access-tokens/
MAPBOX_API_KEY=your_mapbox_api_key_here

# Rate limiting for API endpoints
RATE_LIMIT_PER_MINUTE=10

# Timeouts for external services (seconds)
ROUTING_TIMEOUT_SECONDS=30
WEATHER_TIMEOUT_SECONDS=15

# Optional: Protect your API with authentication
GPT_API_KEY=